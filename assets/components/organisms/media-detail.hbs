notes: |
  ##### Introduced : 0.1.1
  ##### Updated : 0.3.1
  ##### Usage : `{{> media-detail }}`
---
<div class="container">
  <div class="spacer spacer-sm"></div>
  <h1 class="text-center">{{media.title}}</h1>

  <div class="spacer spacer-sm"></div>
  <img src="{{media.source}}" alt="{{media.title}}" class="img-responsive">

  {{> media-features-bar }}

  <div class="spacer spacer-md"></div>

  <div class="row">
    <div class="col-sm-6 col-sm-offset-1 media-description">
      {{{media.description}}}
    </div>
    <div class="col-sm-3 col-sm-offset-1">
      {{> media-infobar }}
    </div>
  </div>
  <div class="spacer spacer-sm"></div>
</div>

<div class="bg-concrete">
  <div class="container">
    <div class="row">
      <div class="col-sm-6 col-sm-offset-1">
        <div class="spacer spacer-sm"></div>
        <h4>Commentaires <span class="text-clear">(3)</span></h4>
        <div class="spacer spacer-xs"></div>
        {{#each media.comments }}
          {{> comment comment-object=this }}
        {{/each}}
        <div class="spacer spacer-xs"></div>
        <h4>Ajouter un commentaire</h4>
        {{> textarea
              textarea-id="comment"
              textarea-label="Commencez Ã  taper ici..."
              textarea-help=" "
        }}
        <div class="spacer spacer-xs"></div>
        <a href="#" class="btn btn-primary pull-right">Commenter</a>
      </div>
    </div>
  </div>
  <div class="spacer"></div>
</div>

