  ##### Usage : `{{> profile-collection }}`
---
<div class="profile-collection">
  <div class="spacer spacer-sm"></div>
  <h1 class="h2 text-center">{{collection.title}}</h1>
  <ul class="list-inline text-clear text-center text-sans">
    <li><i class="glyphicon glyphicon-heart"></i> {{collection.likes}}</li>
    <li><i class="glyphicon glyphicon-file"></i> {{collection.files}}</li>
    &bull; Collection éditée par <a href="profile-person.html" alt="{{collection.author}}">{{collection.author}}</a>
  </ul>
  {{> separator }}
  <div class="row">
    <div class="col-sm-4">
      <img src="{{collection.avatar}}" alt="{{collection.title}}" class="img-responsive" />
    </div>
    <div class="col-sm-8">
      <ul class="list-inline text-justify">
        <li><a href="#" class="btn btn-link"><i class="glyphicon glyphicon-heart"></i> <b>Suivre</b></a></li>
        <li><a href="#" class="btn btn-link"><i class="glyphicon glyphicon-share-alt"></i> Partager</a></li>
        <li><a href="#" class="btn btn-link">Activités</a></li>
      </ul>
      <p class="text-clear text-sans collection-bio" id="collection-bio">
        {{{collection.bio}}}
      </p>
    </div>
  </div>
  <div class="spacer spacer-xs"></div>
  {{> separator }}
  <div class="text-center">
    <button class="btn btn-link btn-readmore" id="btn-readmore">Lire la suite...</button>
  </div>
</div>

