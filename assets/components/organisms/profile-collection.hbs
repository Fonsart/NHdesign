  ##### Usage : `{{> profile-collection }}`
---
<div class="profile-collection">
  <div class="spacer spacer-sm"></div>
  <h1 class="h2 text-center">{{collection.title}}</h1>
  <ul class="list-inline text-center text-sans">
    <li><i class="glyphicon glyphicon-heart"></i> {{collection.likes}}</li>
    <li><i class="glyphicon glyphicon-file"></i> {{collection.files}}</li>
    &bull; Collection éditée par <a href="profile-person.html" alt="{{collection.author}}">{{collection.author}}</a>
  </ul>
  {{> separator }}
  <div class="row">
    <div class="col-sm-4">
      <img src="{{collection.avatar}}" alt="{{collection.title}}" class="img-responsive" />
    </div>
    <div class="col-sm-8">
      <p class="text-sans collection-bio" id="collection-bio">
        {{{collection.bio}}}
      </p>
    </div>
  </div>
  <div class="spacer spacer-xs"></div>
</div>

<div class="media-features-bar bg-nobel text-center">
  <a href="#" class="btn btn-link active" data-alert-message="<i class='glyphicon glyphicon-ok'></i> Bravo, vous suivez la collection {{collection.title}}"><i class="glyphicon glyphicon-heart"></i> Suivre</a>
  <a href="#" class="btn btn-link"><i class="glyphicon glyphicon-share-alt"></i> Partager</a>
  <a href="#" class="btn btn-link"><i class="glyphicon glyphicon-hourglass"></i> Activités</a>
</div>
