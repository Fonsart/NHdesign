<div class="profile-found">
  <img src="{{found.avatar}}" alt="{{found.name}}" class="img-responsive center-block" />
  <h1 class="h2 text-center">{{found.name}}</h1>
  <ul class="list-inline text-center text-sans">
    <li><i class="glyphicon glyphicon-heart"></i> {{found.likes}}</li>
    <li><i class="glyphicon glyphicon-file"></i> {{found.files}}</li>
    &bull; {{found.resume}}
  </ul>
  {{> separator }}
  <p class="text-sans person-bio" id="person-bio">
    {{{found.bio}}}
  </p>
  <div class="spacer spacer-xs"></div>
</div>

<div class="media-features-bar bg-nobel text-center">
  <a href="#" class="btn btn-link active" data-alert-message="<i class='glyphicon glyphicon-ok'></i> Bravo, vous suivez {{found.name}}"><i class="glyphicon glyphicon-heart"></i> Suivre</a>
